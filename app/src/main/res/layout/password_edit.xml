<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/PasswordLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/password"
        tools:ignore="UselessParent">
        <!--android:background="#f7f7f7"-->

        <RelativeLayout
            android:id="@+id/RelativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/exit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:text="@string/exit_password"
                android:textColor="#444a59"
                android:textSize="20sp" />
        </RelativeLayout>

        <View
            android:id="@+id/draw_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/RelativeLayout"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#d1d2d6" />

        <com.kingbird.advertisting.activity.PasswordEditText
            android:id="@+id/password_edit_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/draw_line"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:padding="10dp"
            app:bgCorner="3dp" />

    </RelativeLayout>

</RelativeLayout>